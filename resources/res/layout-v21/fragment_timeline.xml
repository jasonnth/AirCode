<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/empty_state" android:paddingTop="140dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <com.airbnb.p027n2.primitives.AirTextView android:gravity="center" android:paddingBottom="@dimen/n2_vertical_padding_medium" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/n2_horizontal_padding_large" android:layout_marginRight="@dimen/n2_horizontal_padding_large" android:text="@string/itinerary_empty_state_text" style="@style/n2_TitleText3"/>
        <com.airbnb.lottie.LottieAnimationView android:id="@+id/animation_image" android:layout_width="@dimen/n2_itinerary_empty_state_icon_size" android:layout_height="@dimen/n2_itinerary_empty_state_icon_size" app:lottie_fileName="empty-state.json" app:lottie_autoPlay="true" app:lottie_loop="true"/>
        <View android:background="@color/n2_divider_color" android:layout_width="2dp" android:layout_height="36dp" android:layout_marginTop="@dimen/n2_vertical_padding_tiny_half"/>
        <com.airbnb.p027n2.primitives.AirTextView android:id="@+id/empty_state_text" android:background="@drawable/n2_button_bar_button_background_inverse" android:paddingLeft="@dimen/n2_horizontal_padding_small" android:paddingTop="@dimen/n2_vertical_padding_tiny" android:paddingRight="@dimen/n2_horizontal_padding_small" android:paddingBottom="@dimen/n2_vertical_padding_tiny" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/n2_vertical_padding_tiny_half" android:layout_marginBottom="@dimen/n2_vertical_padding_tiny_half" android:text="@string/itinerary_empty_state_cta_text" style="@style/n2_RegularText.Actionable"/>
        <View android:background="@color/n2_divider_color" android:layout_width="2dp" android:layout_height="0dp" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="horizontal" android:id="@+id/pending_header" android:background="@android:color/white" android:paddingLeft="@dimen/n2_vertical_padding_small" android:paddingTop="@dimen/n2_vertical_padding_small" android:paddingRight="@dimen/n2_vertical_padding_small" android:paddingBottom="@dimen/n2_vertical_padding_small" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:elevation="@dimen/n2_toolbar_elevation">
            <com.airbnb.p027n2.primitives.AirTextView android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/pending_title" android:paddingRight="@dimen/n2_vertical_padding_small" android:layout_width="0dp" android:layout_height="wrap_content" android:maxLines="2" android:layout_weight="1" style="@style/n2_RegularText"/>
            <com.airbnb.p027n2.primitives.AirTextView android:layout_gravity="center_vertical" android:id="@+id/pending_action" android:background="@drawable/n2_button_bar_button_background_inverse" android:paddingLeft="@dimen/n2_horizontal_padding_small" android:paddingTop="12dp" android:paddingRight="@dimen/n2_horizontal_padding_small" android:paddingBottom="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/n2_RegularText.Actionable"/>
        </LinearLayout>
        <com.airbnb.p027n2.collections.AirRecyclerView android:id="@+id/recycler_view" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="match_parent" app:layoutManager="LinearLayoutManager"/>
    </LinearLayout>
    <com.airbnb.p027n2.components.LoadingView android:layout_gravity="center" android:id="@+id/loading_view" android:visibility="gone" style="@style/n2_LoadingView.Vertical"/>
</FrameLayout>
