<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.airbnb.p027n2.primitives.imaging.AirImageView android:id="@+id/image_view" android:layout_width="match_parent" android:layout_height="500dp" android:scaleType="centerCrop"/>
        <LinearLayout android:gravity="center_vertical" android:layout_gravity="bottom|right|center_vertical|center_horizontal|center" android:orientation="horizontal" android:id="@+id/home_tour_expanding_button" android:background="@drawable/n2_select_home_tour_pill_button_background" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/n2_horizontal_padding_medium" android:layout_marginBottom="@dimen/n2_vertical_padding_medium" android:animateLayoutChanges="true">
            <com.airbnb.p027n2.primitives.AirTextView android:id="@+id/home_tour_expanding_button_text" android:paddingLeft="@dimen/n2_horizontal_padding_small" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/n2_select_home_tour_button_text" style="@style/n2_RegularText"/>
            <com.airbnb.p027n2.primitives.imaging.AirImageView android:layout_width="48dp" android:layout_height="48dp" android:scaleType="centerInside" app:srcCompat="@drawable/n2_ic_am_dog"/>
        </LinearLayout>
    </FrameLayout>
    <com.airbnb.p027n2.primitives.AirTextView android:id="@+id/title_view" android:paddingLeft="@dimen/n2_horizontal_padding_medium" android:paddingTop="@dimen/n2_vertical_padding_medium" android:paddingRight="@dimen/n2_horizontal_padding_medium" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/n2_TitleText2"/>
    <com.airbnb.p027n2.primitives.AirTextView android:paddingLeft="@dimen/n2_horizontal_padding_medium" android:paddingTop="@dimen/n2_vertical_padding_medium" android:paddingRight="@dimen/n2_horizontal_padding_medium" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Placeholder: handpicked homes, verified for comfort" style="@style/n2_SmallText"/>
</merge>
