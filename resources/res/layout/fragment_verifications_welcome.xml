<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/img_background" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <com.airbnb.p027n2.primitives.imaging.AirImageView android:id="@+id/img_gradient" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="center" app:srcCompat="@drawable/full_background_gradient"/>
    <LinearLayout android:gravity="bottom" android:orientation="vertical" android:id="@+id/container_content" android:layout_width="match_parent" android:layout_height="match_parent">
        <com.airbnb.p027n2.primitives.AirTextView android:textColor="@color/white" android:gravity="center" android:id="@+id/welcome_user_header" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/Canonical.Text.B"/>
        <com.airbnb.p027n2.primitives.AirTextView android:textColor="@color/white" android:gravity="center" android:paddingLeft="25dp" android:paddingRight="25dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:layout_marginBottom="15dp" android:text="@string/verifications_welcome_real_people" style="@style/Canonical.Text.E"/>
        <com.airbnb.p027n2.primitives.AirTextView android:textColor="@color/white" android:gravity="center" android:paddingLeft="25dp" android:paddingRight="25dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:text="@string/verifications_welcome_why_activate" style="@style/Canonical.Text.E"/>
        <com.airbnb.android.lib.views.StickyButton android:id="@+id/btn_welcome" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/gutter_padding" app:title="@string/verifications_welcome_get_started"/>
    </LinearLayout>
</FrameLayout>
