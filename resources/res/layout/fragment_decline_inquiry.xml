<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:paddingTop="?attr/actionBarSize" android:paddingBottom="56dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.airbnb.p027n2.components.DocumentMarquee android:id="@+id/marquee" android:layout_width="match_parent" android:layout_height="wrap_content" app:n2_captionText="@string/decline_inquiry_subtitle"/>
            <com.airbnb.p027n2.components.SimpleTextRow android:id="@+id/text_row" style="@style/n2_SimpleTextRow.Regular"/>
            <com.airbnb.p027n2.components.LinkActionRow android:id="@+id/edit_row" android:visibility="gone" app:n2_text="@string/decline_inquiry_edit_message" style="@style/n2_LinkActionRow"/>
            <com.airbnb.p027n2.primitives.AirTextView android:textColor="@color/white" android:id="@+id/message" android:background="@drawable/n2_babu_background" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="?attr/n2_horizontal_side_padding"/>
        </LinearLayout>
    </ScrollView>
    <com.airbnb.p027n2.primitives.AirButton android:layout_gravity="bottom|right|center_vertical|center_horizontal|center" android:id="@+id/edit_button" android:text="@string/decline_inquiry_button_text" style="@style/n2_AirButton.BabuFill"/>
    <com.airbnb.p027n2.components.PrimaryButton android:layout_gravity="bottom" android:id="@+id/finish_button" android:visibility="gone" app:n2_buttonText="@string/decline_inquiry_final_button_text" style="@style/n2_PrimaryButton"/>
    <com.airbnb.p027n2.components.AirToolbar android:id="@+id/toolbar" app:n2_navigationIcon="1" style="@style/n2_AirToolbar.Transparent.DarkForeground"/>
</android.support.design.widget.CoordinatorLayout>
