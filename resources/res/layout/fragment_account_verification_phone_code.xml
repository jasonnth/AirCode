                <com.airbnb.p027n2.primitives.AirButton android:id="@+id/back_btn" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginRight="7dp" android:text="@string/back" android:layout_weight="1" style="@style/Canonical.Button.Gray"/>
