            <RatingBar android:id="@+id/rating_bar" android:visibility="gone" android:layout_marginTop="@dimen/n2_vertical_padding_tiny_half" style="@style/n2_StarRatingBar.Babu"/>
        </LinearLayout>
    </RelativeLayout>
    <com.airbnb.p027n2.primitives.ExpandableTextView android:id="@+id/text_review_public_comment" android:paddingLeft="?attr/n2_horizontal_side_padding" android:paddingRight="?attr/n2_horizontal_side_padding" android:paddingBottom="@dimen/n2_vertical_padding_medium" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/n2_RegularText"/>
    <com.airbnb.p027n2.primitives.AirTextView android:id="@+id/translation_details" android:paddingLeft="?attr/n2_horizontal_side_padding" android:paddingRight="?attr/n2_horizontal_side_padding" android:paddingBottom="@dimen/n2_vertical_padding_medium" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/n2_SmallText"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/private_comments_layout" android:paddingLeft="?attr/n2_horizontal_side_padding" android:paddingRight="?attr/n2_horizontal_side_padding" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.airbnb.p027n2.primitives.AirTextView android:id="@+id/text_review_private_comments_title" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/n2_RegularText.Plus"/>
        <com.airbnb.p027n2.primitives.AirTextView android:id="@+id/text_review_private_comments" android:paddingBottom="@dimen/n2_vertical_padding_medium" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/n2_RegularText"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/public_response_layout" android:paddingLeft="?attr/n2_horizontal_side_padding" android:paddingRight="?attr/n2_horizontal_side_padding" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <View android:layout_marginBottom="@dimen/n2_vertical_padding_medium" style="@style/n2_PipDivider"/>
        <com.airbnb.p027n2.primitives.AirTextView android:id="@+id/text_review_public_response_title" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/n2_RegularText.Plus"/>
        <com.airbnb.p027n2.primitives.AirTextView android:id="@+id/text_review_public_response" android:paddingBottom="@dimen/n2_vertical_padding_medium" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/n2_RegularText"/>
    </LinearLayout>
    <com.airbnb.p027n2.primitives.AirTextView android:gravity="right" android:id="@+id/text_review_report_link" android:paddingRight="?attr/n2_horizontal_side_padding" android:paddingBottom="@dimen/n2_vertical_padding_medium" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/n2_SmallText"/>
    <View android:id="@+id/divider" style="@style/n2_SubsectionDivider"/>
</merge>
