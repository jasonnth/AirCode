<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/fragment_container" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:id="@+id/btnExecute" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Execute"/>
        <Button android:id="@+id/btnClear" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Clear logs"/>
        <CheckBox android:id="@+id/checkDouble" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Double"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Soft TTL"/>
        <EditText android:id="@+id/txtSoftTTL" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="5000"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="TTL"/>
        <EditText android:id="@+id/txtTTL" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="10000"/>
    </LinearLayout>
    <ScrollView android:id="@+id/scroll_view" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="12dp" android:id="@+id/txtOutput" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="monospace"/>
    </ScrollView>
</LinearLayout>
