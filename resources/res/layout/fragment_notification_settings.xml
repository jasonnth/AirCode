<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.airbnb.p027n2.collections.VerboseScrollView android:id="@+id/scroll_view" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <include layout="@layout/n2_view_model_toolbar_spacer"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/push_notification_settings" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.airbnb.p027n2.components.MicroSectionHeader app:n2_titleText="@string/notifications_push_notifications" style="@style/n2_MicroSectionHeader.First"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/sms_notification_settings" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.airbnb.p027n2.components.MicroSectionHeader app:n2_titleText="@string/notifications_text_notifications" style="@style/n2_MicroSectionHeader.Secondary"/>
            </LinearLayout>
            <com.airbnb.p027n2.components.SimpleTextRow app:n2_showDivider="false" app:n2_text="@string/notifications_account_activity_info" style="@style/n2_SimpleTextRow.Small"/>
        </LinearLayout>
    </com.airbnb.p027n2.collections.VerboseScrollView>
    <com.airbnb.p027n2.components.AirToolbar android:id="@+id/toolbar" app:n2_titleText="@string/notifications" app:n2_scrollWith="@+id/scroll_view" app:n2_navigationIcon="1" style="@style/n2_AirToolbar"/>
</android.support.design.widget.CoordinatorLayout>
