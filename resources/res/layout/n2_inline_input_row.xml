<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <com.airbnb.p027n2.primitives.AirTextView android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/inline_input_row_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1" android:singleLine="true"/>
    <com.airbnb.p027n2.primitives.AirTextView android:id="@+id/inline_input_row_subtitle" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/n2_vertical_padding_tiny_half" android:layout_marginBottom="@dimen/n2_vertical_padding_tiny_half" android:layout_below="@+id/inline_input_row_title"/>
    <com.airbnb.p027n2.primitives.AirEditTextView android:gravity="top" android:id="@+id/inline_input_row_edit_text" android:background="@android:color/transparent" android:padding="0dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/n2_vertical_padding_tiny_half" android:layout_marginBottom="@dimen/n2_vertical_padding_small" android:layout_toLeftOf="@+id/inline_input_row_icon" android:layout_below="@+id/inline_input_row_subtitle" android:textCursorDrawable="@null"/>
    <ImageView android:id="@+id/inline_input_row_icon" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginLeft="@dimen/n2_horizontal_padding_tiny_half" android:layout_marginTop="2dp" android:scaleType="center" android:layout_alignTop="@+id/inline_input_row_edit_text" android:layout_alignParentRight="true"/>
    <View android:id="@+id/inline_input_row_divider" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/inline_input_row_edit_text"/>
    <com.airbnb.p027n2.primitives.AirTextView android:id="@+id/inline_input_row_error" android:paddingTop="@dimen/n2_vertical_padding_tiny" android:paddingBottom="@dimen/n2_vertical_padding_small" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/inline_input_row_divider"/>
    <com.airbnb.p027n2.primitives.AirTextView android:ellipsize="end" android:id="@+id/inline_input_row_tip" android:visibility="gone" android:layout_below="@+id/inline_input_row_error" style="@style/n2_Internal_Tip_InlineInputRow"/>
</RelativeLayout>
