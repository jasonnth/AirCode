<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <android.support.percent.PercentFrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.airbnb.p027n2.primitives.imaging.AirImageView android:id="@+id/image" android:background="@color/n2_loading_background" android:scaleType="centerCrop" app:layout_widthPercent="100%" app:layout_aspectRatio="150%"/>
    </android.support.percent.PercentFrameLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/title_layout" android:paddingLeft="16dp" android:paddingTop="16dp" android:paddingRight="8dp" android:paddingBottom="16dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.airbnb.p027n2.primitives.AirTextView android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/title" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="2" style="@style/n2_RegularText.Plus"/>
        <com.airbnb.p027n2.primitives.AirTextView android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/subtitle" android:paddingTop="4dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="2" style="@style/n2_SmallText"/>
    </LinearLayout>
    <View android:id="@+id/divider" android:background="@color/n2_divider_color" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1dp"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/action_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.airbnb.p027n2.primitives.AirTextView android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/action_title" android:padding="16dp" android:layout_width="0dp" android:layout_height="wrap_content" android:maxLines="2" android:layout_weight="1" style="@style/n2_SmallText"/>
        <com.airbnb.p027n2.primitives.AirTextView android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/action_button" android:background="@drawable/n2_button_bar_button_background_inverse" android:paddingLeft="16dp" android:paddingTop="6dp" android:paddingRight="16dp" android:paddingBottom="6dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="16dp" android:maxLines="1" style="@style/n2_LargeText.Actionable"/>
    </LinearLayout>
</LinearLayout>
