<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent" android:filterTouchesWhenObscured="true" android:importantForAccessibility="no">
    <View android:id="@+id/help_background" android:background="?attr/netverify_helpBackground" android:layout_width="match_parent" android:layout_height="match_parent" android:importantForAccessibility="no"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/overall_container" android:paddingLeft="70dp" android:paddingRight="70dp" android:layout_width="match_parent" android:layout_height="match_parent" android:importantForAccessibility="no">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/doctype_container" android:paddingRight="25dp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.5"/>
        <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.5">
            <View android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
            <TextView android:textSize="14sp" android:textColor="?attr/netverify_helpProgressString" android:id="@+id/helpview_progress_info" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="5dp" android:fontFamily="sans-serif-light"/>
            <TextView android:textSize="21sp" android:textColor="?attr/netverify_helpTitle" android:id="@+id/helpview_doctype_title" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <View android:id="@+id/separator" android:background="?attr/netverify_helpSeperator" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp"/>
            <TextView android:textSize="17sp" android:textColor="?attr/netverify_helpInstructions" android:id="@+id/helpview_scan_instructions" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <Button android:textSize="14sp" android:textColor="?attr/netverify_helpFallbackText" android:layout_gravity="center_horizontal" android:id="@+id/helpview_fallback_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp"/>
            <TextView android:textSize="12sp" android:textColor="?attr/netverify_helpNote" android:gravity="center_vertical" android:id="@+id/helpview_tap_to_continue" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <ProgressBar android:id="@+id/helpview_progress_bar" android:layout_width="match_parent" android:layout_height="3dp" android:progress="50" android:layout_alignParentBottom="true" style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
</RelativeLayout>
