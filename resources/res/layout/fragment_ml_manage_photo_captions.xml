<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:id="@+id/scrollview" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.airbnb.android.core.views.ClickableViewPager android:id="@+id/view_pager_property_images" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </FrameLayout>
    </ScrollView>
    <FrameLayout android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.airbnb.p027n2.primitives.AirEditTextView android:id="@+id/edit_caption" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/ml_caption_hint" android:inputType="none|text|textCapSentences|textMultiLine" style="@style/Canonical.EditText"/>
    </FrameLayout>
</LinearLayout>
